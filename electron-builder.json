{
  "appId": "com.fissurerunner.app",
  "productName": "Fissure Runner",
  "directories": {
    "output": "dist-installer"
  },
  "win": {
    "target": "nsis"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "installerIcon": "icon.ico",
    "uninstallerIcon": "icon.ico"
  },
  "publish": [
    {
      "provider": "github",
      "owner": "Lysiohn",
      "repo": "fissure-runner"
    }
  ],
  "files": [
    "**/*",
    "!dist/**",
    "!dist-installer/**"
  ]
}
