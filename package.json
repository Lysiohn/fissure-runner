{
  "name": "fissure-runner",
  "version": "1.8.0",
  "description": "Warframe Fissure Runner",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win --publish always",
    "build:linux": "electron-builder --linux --publish always"
  },
  "build": {
    "appId": "com.lysi.fissurerunner",
    "productName": "Fissure Runner",
    "asar": true,
    "directories": {
      "output": "dist-installer"
    },
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    },
    "linux": {
      "target": [
        "pacman",
        "AppImage"
      ],
      "icon": "icon.png",
      "category": "Game"
    },
    
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "installerIcon": "icon.ico",
      "uninstallerIcon": "icon.ico"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "Lysiohn",
        "repo": "fissure-runner"
      }
    ],
    "files": [
      "**/*",
      "!dist/**",
      "!dist-installer/**",
      "!*.exe",
      "!*.zip"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "electron-updater": "^6.7.3"
  },
  "devDependencies": {
    "electron": "^40.0.0",
    "electron-builder": "^26.4.0"
  }
}
