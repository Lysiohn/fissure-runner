{
  "name": "fissure-runner",
  "version": "1.5.1",
  "description": "Warframe Fissure Runner",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.lysi.fissurerunner",
    "productName": "Fissure Runner",
    "directories": {
      "output": "dist-installer"
    },
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "installerIcon": "icon.ico",
      "uninstallerIcon": "icon.ico"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "Lysiohn",
        "repo": "fissure-runner"
      }
    ],
    "files": [
      "**/*",
      "!dist/**",
      "!dist-installer/**",
      "!*.exe",
      "!*.zip"
    ],
    "asarUnpack": [
      "**/node_modules/tesseract.js-core/**/*"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "electron-updater": "^6.7.3",
    "tesseract.js": "^7.0.0"
  },
  "devDependencies": {
    "electron": "^40.0.0",
    "electron-builder": "^26.4.0",
    "electron-packager": "^17.1.2"
  }
}
